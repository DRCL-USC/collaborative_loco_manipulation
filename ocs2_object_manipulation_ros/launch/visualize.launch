<launch>
    <arg name="rviz"       default="true" />
    <arg name="rvizconfig" default="$(find ocs2_object_manipulation_ros)/rviz/object.rviz" />
    <arg name="model"      default="$(find ocs2_object_manipulation_ros)/urdf/object.urdf"/>
    
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />
    
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    <node pkg="rviz" type="rviz" name="Object" args="-d $(arg rvizconfig)" output="screen" if="$(arg rviz)"/>
    
</launch>
	
